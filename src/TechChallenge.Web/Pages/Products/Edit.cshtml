@page
@model TechChallenge.Web.Pages.Products.EditModel

<form method="post" enctype="multipart/form-data">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Atualizar Produto</h2>
            <hr />
        </div>
        <div asp-validation-summary="All">
            <div class="mb-3">
                <label asp-for="Product.Id"></label>
                <input asp-for="Product.Id" class="form-control" readonly="readonly" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger" />
            </div>
            <div class="mb-3">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger" />
            </div>
            <div class="mb-3">
                <label>Images</label>
                <ul style="list-style: none">
                    @foreach (var image in Model.Product.Images)
                    {
                        <li style="display: inline-block">
                            <div>
                                <img src="@image.Url" style="width:100px">
                                <br />
                                <button type="submit" class="btn btn-outline-danger"
                                asp-page-handler="remove" asp-route-imageId="@image.Id">
                                Excluir
                            </button>
                            </div>
                        </li>
                    }
                </ul>
                <input type="file" name="files" multiple="multiple" class="form-control" />
            </div>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px">
            Atualizar
        </button>
    </div>
</form>